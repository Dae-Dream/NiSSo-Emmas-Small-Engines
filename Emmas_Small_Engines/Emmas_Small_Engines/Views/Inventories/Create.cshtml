<hr class="mb-5" />
<form asp-action="Create">
    <div class="container shadow pb-1 bg-light bg-gradient">
        <div asp-validation-summary="ModelOnly" class="row text-danger text-center"></div>
        <div class="row mb-3">
            <div class="col-md-10 mx-auto bg-light mb-3 py-3 rounded-3">
                <div class="card shadow-lg border-bottom mx-auto" style="width: 300px;">
                    <div class="card-header input-group bg-primary">
                        <span class="input-group-text" style="height: 50px;" id="nameInputSpan">
                            @Html.DisplayNameFor(model=> model.Name)
                        </span>
                        <div class="form-floating">
                            <input asp-for="Name" class="form-control text-center" style="height: 50px;" id="nameInput" aria-describedby="nameInputSpan" />
                            <label asp-for="Name" for="nameInput">eg. Test Product</label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-body bg-light bg-gradient">
                        <ul class="list-group list-group-flush">
                            <li class="input-group ">
                                <span class="  input-group-text" style="height: 50px;" id="UPCinput">
                                    @Html.DisplayNameFor(model=> model.UPC)
                                </span>
                                <div class="form-floating">
                                    <input asp-for="UPC" class="form-control text-center" style="height: 50px;" id="upcInput" aria-describedby="UPCinput" />
                                    <label asp-for="UPC" for="UPCinput">eg. 12345678 </label>
                                    <span asp-validation-for="UPC" class="text-danger"></span>
                                </div>
                            </li>
                            <li class="input-group ">
                                <span class="input-group-text" style="height: 50px;" id="invenHeading">
                                    @Html.DisplayNameFor(model=> model.Size)
                                </span>
                                <div class="form-floating">
                                    <input asp-for="Size" class="form-control text-center" style="height: 50px;" aria-describedby="invenHeading" />
                                    <label asp-for="Size" for="UPCinput">eg. 5", 10" etc..</label>
                                    <span asp-validation-for="Size" class="text-danger"></span>
                                </div>
                            </li>
                            <li class="input-group flex-nowrap ">
                                <span class=" input-group-text" style="height: 50px;" id="fieldHeading">
                                    @Html.DisplayNameFor(model => model.Quantity)
                                </span>
                                <div class="form-floating">
                                    <input asp-for="Quantity" style="height: 50px;" class=" text-center form-control" aria-describedby="fieldHeading" />
                                    <label asp-for="Quantity" for="fieldHeading">eg. 1-Pack, 2-Pack etc..</label>
                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                </div>
                            </li>
                            <li class="input-group ">
                                <span class="input-group-text" style="height: 50px;" id="adjustPrice">
                                    @Html.DisplayNameFor(model => model.AdjustPrice)
                                </span>
                                <div class="form-floating">
                                    <input asp-for="AdjustPrice" style="height: 50px;" class="text-center form-control" aria-describedby="adjustPrice" />
                                    <label asp-for="AdjustPrice" for="adjustPrice">eg. 10.59, 9.00 etc..</label>
                                    <span asp-validation-for="AdjustPrice" class="text-danger"></span>
                                </div>

                            </li>
                            <li class="input-group ">
                                <span class=" input-group-text" style="height: 50px;" id="mrkUpPrice">
                                    @Html.DisplayNameFor(model => model.MarkupPrice)
                                </span>
                                <div class="form-floating">
                                    <input asp-for="MarkupPrice" style="height: 50px;" class="text-center form-control " aria-describedby="mrkUpPrice">
                                    <label asp-for="MarkupPrice" for="mrkUpPrice">eg. 10.59, 9.00 etc..</label>
                                    <span asp-validation-for="MarkupPrice" class="text-danger"></span>
                                </div>
                            </li>
                            <li class="input-group mb-1">
                                <span class="form-check-label input-group-text" id="flexCheck">
                                    @Html.DisplayNameFor(model=> model.Current)
                                </span>
                                <div class="form-control d-flex justify-content-center">
                                    <input class="form-check" asp-for=Current />
                                </div>
                            </li>
                            <li class="input-group mt-2 ">
                                <span class=" input-group-text" style="height: 50px;" id="stock">
                                    @Html.DisplayNameFor(model => model.Stock)
                                </span>
                                <div class="form-floating">
                                    <input asp-for="Stock" style="height: 50px;" class="text-center form-control " aria-describedby="stock">
                                    <label asp-for="Stock" for="stock">eg. 1, 20, 200 etc..</label>
                                    <span asp-validation-for="Stock" class="text-danger"></span>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <hr class="mb-4 mt-0 w-75 mx-auto" />
            <div class="row flex-row justify-content-center gap-3">
                
                <div class="col-auto">
                    <input type="submit" value="Save Changes" class="btn btn-outline-success" />

                </div>
                <div class="col-auto">
                    <a asp-action="Index" class="btn btn-outline-danger">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</form>
