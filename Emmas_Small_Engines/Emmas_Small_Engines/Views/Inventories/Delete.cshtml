@model Emmas_Small_Engines.Models.Inventory
@{
    ViewData["Title"] = "Delete Product";
}
<div class="d-flex mt-5 mb-2 flex-row gap-2">
    <h3 class="display-4">Delete Product</h3>
</div>
<hr class="mb-4 mt-3" />
<div class="container shadow pb-1 bg-light bg-gradient">
    <div class="row text-center">
        <h6 class="display-6 pt-3">Are you sure you wish to delete this product?</h6>
    </div>
    <hr class="mb-4 mt-2 w-75 mx-auto" />
    <div class="row mb-3">
        <div class="col-md-10 mx-auto bg-light mb-5 py-3 rounded-3">
            <div class="card shadow-lg border-bottom mx-auto" style="width: 300px;">
                <div class="card-header fs-5 bg-primary text-center text-white" >
                   @Html.DisplayFor(model=> model.Name)
                </div>
                <div class="card-body bg-light bg-gradient">
                    <ul class="list-group list-group-flush">
                        <li class="input-group mb-2">
                            <span class="  input-group-text" id="UPCinput">
                                @Html.DisplayNameFor(model=> model.UPCFormatted)
                            </span>
                            <input disabled type="text" class=" form-control text-center" aria-describedby="UPCinput" value="@Html.DisplayFor(model => model.UPCFormatted)">

                        </li>
                        <li class="input-group mb-2">
                            <span class="input-group-text" id="invenHeading">
                                @Html.DisplayNameFor(model=> model.Size)
                            </span>
                            <input class="form-control text-center" disabled aria-describedby="invenHeading" value="@Html.DisplayFor(model => model.Size)" />
                        </li>
                        <li class="input-group flex-nowrap mb-2">
                            <span class=" input-group-text" id="fieldHeading">
                                @Html.DisplayNameFor(model => model.Quantity)
                            </span>
                            <input disabled type="text" class=" text-center form-control" aria-describedby="fieldHeading" value="@Html.DisplayFor(model=> model.Quantity)" />
                        </li>
                        <li class="input-group mb-2">
                            <span class="  input-group-text" id="adjustPrice">
                                @Html.DisplayNameFor(model => model.AdjustPrice)
                            </span>
                            <input disabled type="text" class="text-center form-control" aria-describedby="adjustPrice" value=" @Html.DisplayFor(model => model.AdjustPrice)">

                        </li>
                        <li class="input-group mb-2">
                            <span class=" input-group-text" id="mrkUpPrice">
                                @Html.DisplayNameFor(model => model.MarkupPrice)
                            </span>
                            <input disabled type="text" class="text-center form-control " aria-describedby="mrkUpPrice" value="@Html.DisplayFor(model => model.MarkupPrice)">
                        </li>
                        <li class="input-group mb-2">
                            <span class="form-check-label input-group-text" id="flexCheck">
                                @Html.DisplayNameFor(model=> model.Current)
                            </span>
                            <div class="form-control d-flex justify-content-center bg-body-secondary">
                                <input class="form-check" asp-for=Current />
                            </div> 
                        </li>
                        <li class="input-group mt-2 ">
                            <span class=" input-group-text" style="height: 50px;" id="stock">
                                @Html.DisplayNameFor(model => model.Stock)
                            </span>
                            <div class="form-floating">
                                <input disabled asp-for="Stock" style="height: 50px;" class="text-center form-control " aria-describedby="stock">
                                <label asp-for="Stock" for="stock">eg. 1, 20, 200 etc..</label>
                                <span asp-validation-for="Stock" class="text-danger"></span>
                            </div>
                        </li>
                    </ul>
                </div>

            </div>

        </div>
        <hr class="mb-4 mt-0 w-75 mx-auto" />
        <form asp-action="Delete">
            <div class="row flex-row justify-content-center gap-3">

                <input type="hidden" asp-for="UPC" />
                <div class="col-auto">
                    <input type="submit" value="Confirm Delete" class="btn btn-outline-success" />

                </div>
                <div class="col-auto">
                    <a asp-action="Index" class="btn btn-outline-danger">Cancel</a>
                </div>

            </div>
        </form>

    </div>
</div>



